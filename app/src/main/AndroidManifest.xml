<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="learning.shinesdev.mylastmovie">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission
        android:name="learning.shinesdev.mylastmovie.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="learning.shinesdev.mylastmovie.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:configChanges="locale"
        android:fullBackupContent="@xml/backup_descriptor"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <receiver
            android:name=".services.ReleaseReminderReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <provider
            android:name=".provider.MovieContentProvider"
            android:authorities="learning.shinesdev.mylastmovie"
            android:enabled="true"
            android:exported="true"
            android:readPermission="learning.shinesdev.mylastmovie.READ_DATABASE"
            android:writePermission="learning.shinesdev.mylastmovie.WRITE_DATABASE" />

        <activity
            android:name=".activity.ReminderSetting"
            android:parentActivityName=".activity.MainActivity" />

        <receiver android:name=".widget.MovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_app_widget_info" />
        </receiver>
        <receiver
            android:name=".services.DailyReminderReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.tvshow.DetailTVShowActivity"
            android:parentActivityName=".activity.tvshow.TVShowFragment" />
        <activity
            android:name=".activity.movie.DetailMovieActivity"
            android:parentActivityName=".activity.movie.MovieFragment" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".widget.StackWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <service
            android:name=".services.ReleaseReminderService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        <service android:name=".provider.MovieUpdateService" />
    </application>

</manifest>