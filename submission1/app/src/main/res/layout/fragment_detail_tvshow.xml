<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="learning.shinescdev.jetpack.ui.detail.DetailMovieActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_year"
        app:layout_constraintTop_toBottomOf="@+id/lbl_year">

        <ImageView
            android:id="@+id/img_tv_thumb"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_title"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:text="@string/lbl_tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toTopOf="@+id/img_tv_thumb"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_tv_title"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/txt_movie_title"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lbl_year"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_tv_year"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toBottomOf="@+id/txt_tv_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_tv_year"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/txt_movie_year"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toBottomOf="@+id/lbl_year"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/lbl_star"
            android:layout_width="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_tv_stars"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toBottomOf="@+id/txt_tv_year"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_tv_stars"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitStart"
            android:text="@string/txt_movie_stars"
            app:layout_constraintBottom_toBottomOf="@+id/img_tv_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintRight_toRightOf="@id/img_tv_thumb"
            app:layout_constraintStart_toEndOf="@+id/img_tv_thumb"
            app:layout_constraintTop_toBottomOf="@+id/lbl_star"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tv_thumb"
            tools:listitem="@layout/item_list_detail_random" />

        <TextView
            android:id="@+id/lbl_overview"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/lbl_tv_overview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_detail_tv" />

        <TextView
            android:id="@+id/txt_tv_synopsis"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="@string/txt_movie_synopsis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_overview" />

        <TextView
            android:id="@+id/lbl_tv_votes"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:text="@string/lbl_tv_votes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_tv_synopsis" />

        <TextView
            android:id="@+id/txt_tv_votes"
            android:layout_marginStart="12dp"
            android:text="@string/txt_movie_votes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_tv_votes" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>